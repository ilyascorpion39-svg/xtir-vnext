---
import '@/styles/xtir-tokens.css';
import '@/styles/global.css';
import Header from '@/components/common/Header.tsx';
import Footer from '@/components/common/Footer.tsx';
import { SITE } from '@/site';
interface Props {
  title: string;
  description?: string;
  image?: string;
}
const {
  title,
  description = 'XTIR — разработка и производство электронно-механического оборудования для стрельбы. Решения для тиров, полигонов и учебных комплексов.',
  image = '/images/og-image.svg',
} = Astro.props;
const hasBrandInTitle = /(^|\s|\W)xtir($|\s|\W)/i.test(title ?? '');
const pageTitle = title
  ? (hasBrandInTitle ? title : `${title} | XTIR`)
  : 'XTIR — оборудование для стрельбы';
const PROD_CANONICAL_ORIGIN = 'https://x-tir.ru';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const rawPath = Astro.url.pathname || '/';
const basePrefix = base && base !== '/' ? `${base}/` : '';
const normalizedPath = basePrefix && rawPath.startsWith(basePrefix)
  ? `/${rawPath.slice(basePrefix.length)}`
  : rawPath;
const canonicalPath = normalizedPath === '' ? '/' : normalizedPath;
const canonicalURL = new URL(canonicalPath, PROD_CANONICAL_ORIGIN);
const isAbsoluteImage = /^https?:\/\//.test(image);
const cleanImagePath = image.startsWith('/') ? image : `/${image}`;
const ogImage = isAbsoluteImage
  ? image
  : new URL(cleanImagePath, PROD_CANONICAL_ORIGIN);
const logoUrl = `${base}/images/logo.png`;
const logo2xUrl = `${base}/images/xtir-logo@2x.png`;
const faviconUrl = base + '/favicon.svg';
const orgJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: SITE.name,
  url: SITE.websiteUrl,
  email: SITE.contactEmail,
  telephone: [SITE.phonePrimary, SITE.phoneSecondary].filter(Boolean),
  sameAs: [
    SITE.telegramChannelUrl,
    SITE.vkChannelUrl,
    SITE.youtubeChannelUrl,
    SITE.rutubeChannelUrl,
  ].filter(Boolean),
};
const websiteJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: SITE.name,
  url: SITE.websiteUrl,
  inLanguage: "ru-RU",
};
---
<!doctype html>
<html lang="ru" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=yes,email=yes,address=no" />
    <link
      rel="preload"
      as="image"
      href={logoUrl}
      imagesrcset={`${logoUrl} 1x, ${logo2xUrl} 2x`}
      imagesizes="140px"
      fetchpriority="high"
    />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" href={canonicalURL} hreflang="ru-RU" />
    <meta name="theme-color" content="#0F141A" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="XTIR" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="XTIR" />
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title || 'XTIR — оборудование для стрельбы'} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content={`${SITE.name} — ${SITE.tagline}`} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title || 'XTIR — оборудование для стрельбы'} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(orgJsonLd)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteJsonLd)} />
</head>
  <body>
    <a class="xtir-skip-link" href="#main-content">Перейти к содержимому</a>
    <Header client:idle />
    <div id="main-content" tabindex="-1" class="xtir-page-shell">
      <slot />
    </div>
    <Footer />
    <script is:inline>
      (() => {
        const reduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        if (reduced) return;

        document.documentElement.classList.add('js-reveal');
        const items = Array.from(document.querySelectorAll('[data-reveal]'));
        if (!items.length) return;

        const io = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('is-inview');
            io.unobserve(entry.target);
          });
        }, { root: null, rootMargin: '0px 0px -8% 0px', threshold: 0.14 });

        items.forEach((node) => io.observe(node));
      })();
    </script>
  </body>
</html>
