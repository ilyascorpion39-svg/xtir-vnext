---
import BaseLayout from '@/layouts/BaseLayout.astro';
const title = 'Контакты';
const description = 'Свяжитесь с XTIR: запрос цены, КП, документации или консультации.';
---

<BaseLayout title={title} description={description}>
<main class="content-main">
    <section class="xtir-section pt-8 md:pt-10">
      <div class="xtir-container">
        <header class="content-header contact-head" data-reveal>
          <span class="page-kicker">Контакты XTIR</span>
          <h1 class="content-title">Контакты</h1>
          <p class="content-lead">
            Напишите нам — мы подготовим коммерческое предложение, подберём конфигурацию и пришлём документацию.
          </p>
          <div class="contact-highlights">
            <div><strong>24/7</strong><span>на связи по проектам</span></div>
            <div><strong>до 24 ч</strong><span>стартовая обратная связь</span></div>
            <div><strong>1 канал</strong><span>единая почта: info@xtir.ru</span></div>
          </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8" data-reveal="2">
          <div class="xtir-card p-6 lg:col-span-1">
            <h2 class="text-xl font-semibold text-white">Связь</h2>

              <div class="mt-4 space-y-3 text-white/72">
                <div class="flex items-start justify-between gap-3">
                  <div>
                    <p class="text-sm text-white/50">Email</p>
                    <a href="mailto:info@xtir.ru" class="text-base text-white/90 hover:text-white">info@xtir.ru</a>
                  </div>
                <button
                  type="button"
                  class="xtir-btn xtir-btn--secondary !min-h-[36px] px-3 py-2 text-sm"
                  onclick="navigator.clipboard?.writeText('info@xtir.ru')"
                >
                  Скопировать
                </button>
              </div>

              <div>
                <p class="text-sm text-white/50">Телефон</p>
                <a href="tel:+79154250095" class="block text-base text-white/90 hover:text-white">+7 (915) 425-00-95</a>
                <a href="tel:+79162962469" class="block text-base text-white/90 hover:text-white">+7 (916) 296-24-69</a>
              </div>

              <div class="pt-2">
                <button
                  type="button"
                  class="xtir-btn xtir-btn--primary w-full"
                  data-xtir-request
                  data-product="Общий запрос"
                  data-doc="Цена / КП / Документация"
                >
                  Скопировать шаблон письма
                </button>
                <p class="mt-2 text-xs text-white/52">
                  Откроется окно с готовым текстом — останется вставить в любое письмо и отправить на <span class="text-white/72">info@xtir.ru</span>.
                </p>
              </div>
            </div>
          </div>

          <div class="xtir-card p-6 lg:col-span-2">
            <h2 class="text-xl font-semibold text-white">Быстрый запрос</h2>
            <p class="mt-2 text-white/70">
              Заполните форму — мы сформируем текст заявки и скопируем его в буфер обмена.
            </p>

            <form id="contactForm" class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm text-white/70" for="name">Имя</label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Как к вам обращаться"
                />
              </div>

              <div>
                <label class="block text-sm text-white/70" for="company">Компания</label>
                <input
                  id="company"
                  name="company"
                  type="text"
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Тир / клуб / организация"
                />
              </div>

              <div>
                <label class="block text-sm text-white/70" for="phone">Телефон</label>
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Для связи"
                />
              </div>

              <div>
                <label class="block text-sm text-white/70" for="email">Email (ваш)</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Куда отправить ответ"
                />
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm text-white/70" for="subject">Тема</label>
                <input
                  id="subject"
                  name="subject"
                  type="text"
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Например: запрос цены / КП / документации"
                />
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm text-white/70" for="message">Сообщение</label>
                <textarea
                  id="message"
                  name="message"
                  rows={7}
                  class="mt-2 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white placeholder:text-white/35 outline-none focus:border-primary-500/60"
                  placeholder="Опишите задачу, объект, сроки, комплектацию и что нужно прислать"
                ></textarea>
              </div>

              <div class="md:col-span-2 flex flex-col sm:flex-row gap-3 sm:items-center sm:justify-between">
                <button type="submit" class="xtir-btn xtir-btn--primary">
                  Скопировать заявку
                </button>
                <div class="text-sm text-white/54">
                  Отправьте скопированный текст на <span class="text-white/85">info@xtir.ru</span>
                </div>
              </div>
            </form>

            <div id="copyResult" class="xtir-card mt-6 hidden rounded-2xl p-4">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="text-sm text-white/72">
                  <strong class="text-white">Готово.</strong> Текст заявки скопирован. Ниже — на случай если нужно повторно скопировать.
                </div>
                <button id="copyBtn" type="button" class="xtir-btn xtir-btn--secondary !min-h-[36px] px-4 py-2">
                  Скопировать ещё раз
                </button>
              </div>

              <textarea
                id="copyText"
                rows={8}
                class="mt-3 w-full rounded-xl border border-white/15 bg-black/30 px-4 py-3 text-white/85 outline-none focus:border-primary-500/60"
                readonly
              ></textarea>

              <div id="copyStatus" class="mt-2 text-xs text-white/55"></div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
<script is:inline>
    (function () {
      const targetEmail = 'info@xtir.ru';
      const qs = new URLSearchParams(window.location.search);
      const product = qs.get('product') || '';
      const doc = qs.get('doc') || '';
      const id = qs.get('id') || '';

      const subjectEl = document.getElementById('subject');
      const messageEl = document.getElementById('message');

      if (subjectEl && !subjectEl.value.trim()) {
        const parts = [];
        if (product) parts.push(product);
        if (doc) parts.push(doc);
        subjectEl.value = parts.length
          ? `XTIR — запрос: ${parts.join(' — ')}`
          : 'XTIR — запрос цены / КП / документации';
      }

      if (messageEl && !messageEl.value.trim()) {
        const lines = [
          'Здравствуйте!',
          '',
          'Коротко опишите задачу и что нужно подготовить.',
        ];
        if (product) lines.push(`Изделие: ${product}`);
        if (id) lines.push(`ID/страница: ${id}`);
        if (doc) lines.push(`Материалы/документы: ${doc}`);
        lines.push('', 'Спасибо!');
        messageEl.value = lines.join('\n');
      }

      const form = document.getElementById('contactForm');
      const result = document.getElementById('copyResult');
      const resultText = document.getElementById('copyText');
      const copyBtn = document.getElementById('copyBtn');
      const status = document.getElementById('copyStatus');

      function buildPayload() {
        const v = (id) => {
          const el = document.getElementById(id);
          return el && 'value' in el ? String(el.value || '').trim() : '';
        };

        const name = v('name');
        const company = v('company');
        const phone = v('phone');
        const email = v('email');
        const subject = v('subject');
        const msg = v('message');

        const head = [
          `Кому: ${targetEmail}`,
          `Тема: ${subject || 'XTIR — запрос'}`,
          '',
        ];

        const meta = [];
        if (name) meta.push(`Имя: ${name}`);
        if (company) meta.push(`Компания: ${company}`);
        if (phone) meta.push(`Телефон: ${phone}`);
        if (email) meta.push(`Email: ${email}`);
        if (product) meta.push(`Изделие: ${product}`);
        if (id) meta.push(`ID/страница: ${id}`);
        if (doc) meta.push(`Материалы/документы: ${doc}`);

        const body = [
          msg || 'Опишите задачу и требования.',
        ];

        return head.concat(meta.length ? meta.concat(['', '---', '']) : []).concat(body).join('\n');
      }

      async function copy(text) {
        if (!navigator.clipboard) return false;
        try {
          await navigator.clipboard.writeText(text);
          return true;
        } catch {
          return false;
        }
      }

      async function handleCopy() {
        const payload = buildPayload();
        if (resultText) resultText.value = payload;

        const ok = await copy(payload);
        if (status) status.textContent = ok ? 'Скопировано ✅' : 'Не удалось скопировать автоматически. Выделите текст и скопируйте вручную.';

        if (result) result.classList.remove('hidden');
        result?.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      if (form) {
        form.addEventListener('submit', function (e) {
          e.preventDefault();
          handleCopy();
        });
      }

      if (copyBtn) {
        copyBtn.addEventListener('click', function () {
          if (resultText && resultText.value) {
            copy(resultText.value).then((ok) => {
              if (status) status.textContent = ok ? 'Скопировано ✅' : 'Не удалось скопировать. Выделите текст и скопируйте вручную.';
            });
          }
        });
      }
    })();
  </script>
<style>
  .contact-head {
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 16px;
    background: linear-gradient(180deg, rgba(255,255,255,0.045), rgba(255,255,255,0.012));
    padding: clamp(18px, 2.7vw, 30px);
    margin-bottom: 22px;
  }
  .contact-highlights {
    margin-top: 16px;
    display: grid;
    gap: 10px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
  .contact-highlights div {
    display: grid;
    gap: 4px;
    padding: 10px 12px;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    background: rgba(255,255,255,0.02);
  }
  .contact-highlights strong {
    color: #9dd5ff;
    font-size: 1.02rem;
    line-height: 1.1;
  }
  .contact-highlights span {
    color: rgba(255,255,255,0.64);
    font-size: .82rem;
    line-height: 1.42;
  }
  @media (max-width: 900px) {
    .contact-highlights {
      grid-template-columns: 1fr;
    }
  }
</style>
</BaseLayout>
