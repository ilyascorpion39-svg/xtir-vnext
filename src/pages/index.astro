<style>
  :root {
    --bg: #0f141a; --bg2: #0b0e13; --sf: #141a22;
    --bd: rgba(255,255,255,0.07);
    --ac: #00b3ff; --acw: #ff6b35;
    --tx: rgba(255,255,255,0.88); --mu: rgba(255,255,255,0.45);
  }

  /* ‚îÄ‚îÄ HERO ‚îÄ‚îÄ */
  .hero {
    position: relative; background: var(--bg2);
    overflow: hidden; display: flex; flex-direction: column;
    min-height: 100vh;
  }
  .hero__bg { position: absolute; inset: 0; pointer-events: none; }
  .hero__grid {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(0,179,255,0.045) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,179,255,0.045) 1px, transparent 1px);
    background-size: 64px 64px;
    mask-image: radial-gradient(ellipse 85% 85% at 50% 40%, black 0%, transparent 100%);
  }
  .hero__glow-l {
    position: absolute; width: 700px; height: 700px;
    top: -150px; left: -250px; border-radius: 50%;
    background: radial-gradient(circle, rgba(0,179,255,0.18), transparent 70%);
    filter: blur(80px);
  }
  .hero__glow-r {
    position: absolute; width: 500px; height: 500px;
    top: 50px; right: -180px; border-radius: 50%;
    background: radial-gradient(circle, rgba(0,80,180,0.15), transparent 70%);
    filter: blur(80px);
  }
  .hero__scan {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, transparent 40%, rgba(0,179,255,0.025) 50%, transparent 60%);
    animation: scan 10s ease-in-out infinite;
  }
  @keyframes scan { 0%,100%{transform:translateY(-40%)} 50%{transform:translateY(40%)} }

  .hero__body {
    flex: 1; max-width: 1200px; margin: 0 auto; width: 100%;
    padding: 140px 24px 60px;
    display: grid; grid-template-columns: 1fr 1fr;
    gap: 48px; align-items: center;
    position: relative; z-index: 2;
  }
  @media(max-width:900px){ .hero__body{ grid-template-columns:1fr; padding-top:100px; } }

  .hero__kicker {
    display: flex; align-items: center; gap: 10px;
    font-family: 'Courier New', monospace;
    font-size: .7rem; letter-spacing: .18em; text-transform: uppercase;
    color: var(--ac); margin-bottom: 28px;
  }
  .hero__dot {
    width: 7px; height: 7px; border-radius: 50%;
    background: var(--ac); box-shadow: 0 0 10px var(--ac);
    animation: pulse 2s ease-in-out infinite; flex-shrink: 0;
  }
  @keyframes pulse { 0%,100%{opacity:1;transform:scale(1)} 50%{opacity:.4;transform:scale(.7)} }

  .hero__title {
    font-size: clamp(40px, 5.5vw, 80px);
    font-weight: 800; line-height: .93; letter-spacing: -.03em;
    margin: 0 0 24px; color: #fff;
  }
  .hero__outline {
    color: transparent;
    -webkit-text-stroke: 2px rgba(255,255,255,0.45);
  }
  .hero__desc {
    font-size: 1.05rem; line-height: 1.7; color: var(--mu);
    max-width: 480px; margin: 0 0 32px;
  }
  .hero__actions { display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 24px; }

  .btn-primary {
    display: inline-flex; align-items: center;
    padding: 13px 28px; border-radius: 8px;
    background: var(--ac); color: #000;
    font-size: .95rem; font-weight: 700;
    text-decoration: none; transition: all .2s;
  }
  .btn-primary:hover { background: #00c8ff; transform: translateY(-1px); }
  .btn-ghost {
    display: inline-flex; align-items: center;
    padding: 13px 28px; border-radius: 8px;
    color: var(--tx); border: 1px solid var(--bd);
    background: rgba(255,255,255,0.04);
    font-size: .95rem; font-weight: 600;
    text-decoration: none; transition: all .2s;
  }
  .btn-ghost:hover { background: rgba(255,255,255,0.08); }

  .hero__pills { display: flex; gap: 8px; flex-wrap: wrap; }
  .hero__pills span {
    font-family: 'Courier New', monospace;
    font-size: .68rem; letter-spacing: .1em; text-transform: uppercase;
    color: var(--mu); border: 1px solid var(--bd);
    padding: 5px 12px; border-radius: 20px;
    background: rgba(255,255,255,0.03);
  }

  /* Hero –∫–∞—Ä—Ç–æ—á–∫–∞ */
