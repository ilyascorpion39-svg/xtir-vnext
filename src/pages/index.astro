  /* ‚îÄ‚îÄ –ì–ï–†–û–ô ‚îÄ‚îÄ */
  .hero {
    position: relative; min-height: 100vh;
    display: flex; flex-direction: column;
    overflow: hidden; background: #060a0e;
  }
  .hero__bg { position: absolute; inset: 0; }
  .hero__bgimg {
    width: 100%; height: 100%; object-fit: cover;
    opacity: 0.55; display: block;
  }
  .hero__bgover {
    position: absolute; inset: 0;
    background:
      linear-gradient(to bottom, rgba(6,10,14,0.5) 0%, rgba(6,10,14,0.2) 40%, rgba(6,10,14,0.75) 80%, rgba(6,10,14,1) 100%),
      linear-gradient(to right, rgba(6,10,14,0.6) 0%, transparent 50%, rgba(6,10,14,0.3) 100%);
  }
  .hero__grid {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(0,179,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,179,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 70% at 50% 50%, black, transparent);
  }
  .hero__scan {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, transparent 35%, rgba(0,179,255,0.04) 50%, transparent 65%);
    animation: scan 12s ease-in-out infinite;
  }
  @keyframes scan { 0%,100%{transform:translateY(-50%)} 50%{transform:translateY(50%)} }

  /* –£–≥–ª–æ–≤—ã–µ –º–∞—Ä–∫–µ—Ä—ã */
  .hc {
    position: absolute; width: 28px; height: 28px;
    border-color: rgba(0,179,255,0.6); border-style: solid;
    z-index: 5;
  }
  .hc-tl { top: 12px; left: 12px; border-width: 2px 0 0 2px; border-radius: 3px 0 0 0; }
  .hc-tr { top: 12px; right: 12px; border-width: 2px 2px 0 0; border-radius: 0 3px 0 0; }
  .hc-bl { bottom: 60px; left: 12px; border-width: 0 0 2px 2px; border-radius: 0 0 0 3px; }
  .hc-br { bottom: 60px; right: 12px; border-width: 0 2px 2px 0; border-radius: 0 0 3px 0; }

  .hero__wrap {
    flex: 1; display: flex; align-items: center; justify-content: center;
    position: relative; z-index: 3; padding: 120px 24px 60px;
  }
  .hero__center { text-align: center; max-width: 860px; }

  .hero__badge {
    display: inline-flex; align-items: center; gap: 8px;
    font-family: 'Courier New', monospace;
    font-size: .7rem; letter-spacing: .18em; text-transform: uppercase;
    color: var(--ac); margin-bottom: 28px;
    background: rgba(0,179,255,0.08);
    border: 1px solid rgba(0,179,255,0.2);
    padding: 6px 16px; border-radius: 20px;
  }
  .hero__bdot {
    width: 6px; height: 6px; border-radius: 50%;
    background: var(--ac); box-shadow: 0 0 8px var(--ac);
    animation: pulse 2s ease-in-out infinite; flex-shrink: 0;
  }
