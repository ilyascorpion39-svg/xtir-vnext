---
import { withBase } from "@/site";
import TechField from "@/components/visual/TechField";
---

<section class="hp-hero">
  <div class="hp-bg">
    <TechField client:idle />
    <div class="hp-glow-l"></div>
    <div class="hp-glow-r"></div>
    <div class="hp-grid"></div>
  </div>

  <div class="hp-body home-container">
    <div class="hp-center">
      <div class="hp-slogan hp-headline">
        <h1 class="hp-stext">Инженерные решения для стрелковых тренировок</h1>
      </div>
      <div class="hp-desc home-lead">
        Проектирование и производство систем под реальные условия эксплуатации.<br
        />
        Точность. Надёжность. Ресурс.
      </div>
      <div class="hp-acts">
        <a href={withBase("/contact/")} class="home-btn home-btn--primary"
          >Обсудить проект</a
        >
        <a href={withBase("/products/")} class="home-btn home-btn--secondary"
          >Смотреть каталог →</a
        >
      </div>
    </div>
  </div>

  <div class="hp-stats">
    <div class="hp-stat">
      <div class="hp-sn">20+</div><div class="hp-sl">лет в отрасли</div>
    </div>
    <div class="hp-sdiv"></div>
    <div class="hp-stat">
      <div class="hp-sn">30+</div><div class="hp-sl">позиций каталога</div>
    </div>
    <div class="hp-sdiv"></div>
    <div class="hp-stat">
      <div class="hp-sn">РФ</div><div class="hp-sl">производство</div>
    </div>
    <div class="hp-sdiv"></div>
    <div class="hp-stat">
      <div class="hp-sn">24/7</div><div class="hp-sl">поддержка</div>
    </div>
  </div>
</section>

<style>
  .hp-hero {
    --ac: #00b3ff;
    --acw: #ff6b35;
    --bg: #0f141a;
    --bg2: #0b0e13;
    --sf: #141a22;
    --bd: rgba(255, 255, 255, 0.07);
    --tx: rgba(255, 255, 255, 0.88);
    --mu: rgba(255, 255, 255, 0.45);
  }

  .hp-hero {
    position: relative;
    min-height: clamp(520px, 70vh, 700px);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background: linear-gradient(180deg, #05080c 0%, #070c12 100%);
  }
  .hp-bg {
    position: absolute;
    inset: 0;
  }
  .hp-bg::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(4, 7, 12, 0.36) 8%,
      rgba(4, 7, 12, 0.55) 60%,
      rgba(4, 7, 12, 0.74) 100%
    );
    z-index: 2;
    pointer-events: none;
  }
  .hp-glow-l {
    position: absolute;
    width: 800px;
    height: 800px;
    top: -200px;
    left: -300px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(0, 179, 255, 0.14),
      transparent 72%
    );
    filter: blur(110px);
  }
  .hp-glow-r {
    position: absolute;
    width: 600px;
    height: 600px;
    top: 0;
    right: -200px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(0, 60, 180, 0.11),
      transparent 72%
    );
    filter: blur(92px);
  }
  .hp-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 179, 255, 0.018) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 179, 255, 0.018) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 70% at 50% 50%, black, transparent);
    z-index: 1;
    opacity: 0.78;
  }
  .hp-body {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 3;
    padding-top: clamp(18px, 3.6vh, 36px);
    padding-bottom: clamp(14px, 2.6vh, 24px);
  }
  .hp-center {
    text-align: center;
    max-width: 860px;
    margin-inline: auto;
    border-radius: 22px;
    padding: clamp(14px, 2vw, 20px);
    background: linear-gradient(
      180deg,
      rgba(8, 12, 19, 0.3),
      rgba(8, 12, 19, 0.1)
    );
    backdrop-filter: blur(1px);
  }

  .hp-slogan {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 14px;
  }
  .hp-headline {
    display: inline-flex;
    align-items: center;
    max-width: min(94vw, 860px);
  }
  .hp-stext {
    margin: 0;
    font-size: clamp(1.9rem, 4.25vw, 3.7rem);
    font-weight: 800;
    color: #ffffff !important;
    text-align: left;
    line-height: 1.08;
    text-shadow: 0 4px 24px rgba(0, 0, 0, 0.9);
    font-family: inherit !important;
    letter-spacing: -0.024em !important;
    text-wrap: balance;
  }

  .hp-desc {
    max-width: 620px;
    margin: 0 auto 20px;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.95);
    font-family: inherit !important;
  }
  .hp-acts {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hp-stats {
    position: relative;
    z-index: 3;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(16px);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 36px;
    padding: 14px 20px;
    flex-wrap: wrap;
  }
  .hp-stat {
    text-align: center;
  }
  .hp-sn {
    font-size: 1.65rem;
    font-weight: 800;
    color: #00b3ff !important;
    line-height: 1;
    font-family: inherit !important;
  }
  .hp-sl {
    font-family: "Courier New", monospace !important;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.45);
    margin-top: 3px;
  }
  .hp-sdiv {
    width: 1px;
    height: 34px;
    background: rgba(255, 255, 255, 0.07);
  }
  @media (max-width: 600px) {
    .hp-sdiv {
      display: none;
    }
  }
  @media (max-width: 640px) {
    .hp-hero {
      min-height: 500px;
    }
    .hp-slogan {
      align-items: flex-start;
    }
    .hp-headline {
      max-width: 100%;
    }
    .hp-body {
      padding-top: clamp(14px, 3vh, 24px);
      padding-bottom: 10px;
    }
    .hp-center {
      padding: 12px 10px 16px;
    }
    .hp-stext {
      text-align: left;
      line-height: 1.14;
      font-size: clamp(1.72rem, 8vw, 2.5rem);
    }
  }
</style>
