---
import { withBase } from "@/site";

const cards = [
  {
    title: "ПУМА 10",
    accuracy: "Точность цикла: подъем 1.2-1.7 сек",
    image: "/products-img/pmu-10-popper/popper10-1.png",
    href: "/products/pmu-10-popper/",
  },
  {
    title: "ПМУ-100",
    accuracy: "Точность фиксации: 0.1-0.01 мм",
    image: "/products-img/pmu-100/pmu100-1.png",
    href: "/products/pmu-100/",
  },
  {
    title: "ПМУ-12",
    accuracy: "Точная выдержка показа: 0.5-10 сек",
    image: "/products-img/pmu-12/1.png",
    href: "/products/pmu-12/",
  },
  {
    title: "ПМУ-15",
    accuracy: "Точная синхронизация: до 10-15 установок",
    image: "/products-img/pmu-15/1.jpg",
    href: "/products/pmu-15/",
  },
  {
    title: "Попперы и механические мишени",
    accuracy: "Точность поражения: до 7000 Дж (без бронебойных)",
    image: "/products-img/pmu-10-popper/popper10-4.png",
    href: "/products/",
  },
];
---

<section class="tg-section cv-auto" aria-labelledby="tg-title">
  <div class="tg-wrap xtir-container">
    <header class="tg-head">
      <p class="tg-kicker">Техническая витрина</p>
      <h2 id="tg-title">Линейка мишенных установок</h2>
    </header>

    <div class="tg-grid">
      {
        cards.map((card) => (
          <a class="tg-card" href={withBase(card.href)}>
            <span class="tg-doc" aria-hidden="true">
              <svg viewBox="0 0 24 24" focusable="false">
                <path
                  d="M14 2H7a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7z"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.7"
                />
                <path
                  d="M14 2v5h5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.7"
                />
                <path
                  d="M9 12h6M9 16h6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.7"
                  stroke-linecap="round"
                />
              </svg>
            </span>

            <div class="tg-media">
              <img
                src={withBase(card.image)}
                alt={card.title}
                loading="lazy"
                decoding="async"
              />
            </div>

            <div class="tg-body">
              <h3>{card.title}</h3>
              <p class="tg-accuracy">
                <strong>{card.accuracy}</strong>
              </p>
            </div>

            <span class="tg-btn">Протокол испытаний</span>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .tg-section {
    position: relative;
    padding: clamp(34px, 4.8vw, 52px) 0;
    background:
      radial-gradient(
        700px 280px at 82% 8%,
        rgba(255, 122, 40, 0.14),
        transparent 72%
      ),
      radial-gradient(
        640px 280px at 15% 95%,
        rgba(0, 179, 255, 0.12),
        transparent 74%
      ),
      linear-gradient(180deg, #07101a 0%, #070d15 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .tg-head {
    margin-bottom: 12px;
  }

  .tg-kicker {
    margin: 0 0 8px;
    font-family: "Courier New", monospace;
    font-size: 0.66rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(255, 180, 128, 0.9);
  }

  .tg-head h2 {
    margin: 0;
    font-size: clamp(1.44rem, 2.2vw, 1.9rem);
    line-height: 1.12;
    color: #fff;
  }

  .tg-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 12px;
  }

  .tg-card {
    position: relative;
    display: block;
    min-height: 288px;
    border-radius: 14px;
    overflow: hidden;
    text-decoration: none;
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background:
      linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.035),
        rgba(255, 255, 255, 0.01)
      ),
      repeating-linear-gradient(
        115deg,
        rgba(255, 255, 255, 0.02) 0 2px,
        rgba(255, 255, 255, 0) 2px 8px
      ),
      linear-gradient(160deg, #111723 0%, #0c111b 45%, #101722 100%);
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.34);
    transition:
      transform 220ms ease,
      border-color 220ms ease,
      box-shadow 220ms ease;
  }

  .tg-card::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    background:
      radial-gradient(
        220px 110px at 80% 0%,
        rgba(255, 122, 40, 0.18),
        transparent 70%
      ),
      linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.035),
        rgba(255, 255, 255, 0)
      );
    opacity: 0.62;
  }

  .tg-card:hover,
  .tg-card:focus-visible {
    transform: translateY(-6px);
    border-color: rgba(255, 122, 40, 0.74);
    box-shadow: 0 18px 36px rgba(0, 0, 0, 0.44);
  }

  .tg-doc {
    position: absolute;
    top: 9px;
    right: 9px;
    z-index: 3;
    width: 30px;
    height: 30px;
    display: grid;
    place-items: center;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.22);
    background: rgba(11, 15, 22, 0.78);
    color: rgba(255, 255, 255, 0.82);
  }

  .tg-doc svg {
    width: 16px;
    height: 16px;
  }

  .tg-media {
    position: relative;
    height: 164px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    background: #0a1019;
  }

  .tg-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.92;
    transition:
      transform 260ms ease,
      opacity 260ms ease;
  }

  .tg-card:hover .tg-media img,
  .tg-card:focus-visible .tg-media img {
    transform: scale(1.04);
    opacity: 1;
  }

  .tg-body {
    padding: 11px 12px 56px;
  }

  .tg-body h3 {
    margin: 0 0 8px;
    font-size: 1rem;
    line-height: 1.28;
    color: #fff;
  }

  .tg-accuracy {
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.38;
    font-size: 0.84rem;
  }

  .tg-accuracy strong {
    color: #ffd6be;
    font-weight: 800;
  }

  .tg-btn {
    position: absolute;
    left: 12px;
    right: 12px;
    bottom: 12px;
    border: 1px solid rgba(255, 122, 40, 0.72);
    border-radius: 10px;
    background: linear-gradient(
      180deg,
      rgba(255, 122, 40, 0.24),
      rgba(255, 122, 40, 0.1)
    );
    color: #fff2ea;
    text-align: center;
    font-size: 0.76rem;
    font-weight: 700;
    padding: 8px 10px;
    transform: translateY(128%);
    opacity: 0;
    transition:
      transform 220ms ease,
      opacity 220ms ease;
    pointer-events: none;
  }

  .tg-card:hover .tg-btn,
  .tg-card:focus-visible .tg-btn {
    transform: translateY(0);
    opacity: 1;
  }

  @media (max-width: 1150px) {
    .tg-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .tg-grid > .tg-card:last-child:nth-child(5) {
      grid-column: 1 / -1;
    }
  }

  @media (min-width: 1151px) {
    .tg-grid > .tg-card:last-child:nth-child(5) {
      grid-column: 2 / span 2;
    }
  }

  @media (max-width: 640px) {
    .tg-section {
      padding: 28px 0 34px;
    }

    .tg-head {
      margin-bottom: 10px;
    }

    .tg-grid {
      grid-template-columns: 1fr;
      gap: 10px;
    }

    .tg-card {
      min-height: 246px;
    }

    .tg-media {
      height: 136px;
    }

    .tg-body {
      padding: 10px 10px 14px;
    }

    .tg-body h3 {
      font-size: 0.96rem;
      margin-bottom: 6px;
    }

    .tg-accuracy {
      font-size: 0.8rem;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    .tg-btn {
      display: none;
    }
  }
</style>
